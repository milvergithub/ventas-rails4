<div class="col-xs-6 col-xs-offset-3">
  <div class="list-group-item active"><%= accion %> cliente</div>
  <legend></legend>
  <%= form_for @cliente,url: {action: accion} do |cliente| %>
      <% @cliente.errors.full_messages.each do |message|  %>
          <div class="alert-danger">
            <%= message %>
          </div>
      <% end %>
      <div class="form-group">
        <label for="">nombre:</label>
        <%= cliente.text_field :nombre, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="">Apellido Paterno:</label>
        <%= cliente.text_field :ape_pat, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="">Apellido Materno:</label>
        <%= cliente.text_field :ape_mat, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= cliente.submit accion, class: "btn btn-success" %>
      </div>
  <% end %>
</div>